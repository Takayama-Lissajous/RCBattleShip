	cd /boot
	for DTB in am57xx-beagle-x15.dtb am57xx-beagle-x15-revb1.dtb                                 am57xx-evm.dtb am57xx-evm-reva3.dtb                                 am571x-idk.dtb am571x-idk-lcd-osd.dtb am571x-idk-lcd-osd101t2587.dtb                                 am572x-idk.dtb am572x-idk-lcd-osd.dtb am572x-idk-lcd-osd101t2587.dtb am572x-idk-pru-excl-uio.dtb
	do
		DTB_BASE_NAME=`basename ${DTB} | awk -F "." '{print $1}'`
		DTB_SYMLINK_NAME=`echo zImage-am57xx-evm | sed "s/am57xx-evm/${DTB_BASE_NAME}/g"`
