#
# Makefile.ARM
#
#
# If you compile, change the name to Makefile.in.
#
#
 
#-----------------------------------------------------------------------------
# Shell
#-----------------------------------------------------------------------------

SHELL = /bin/sh

#-----------------------------------------------------------------------------
# Platform
#-----------------------------------------------------------------------------

PLAT = ARM

#-----------------------------------------------------------------------------
# Libraries and includes
#-----------------------------------------------------------------------------
 
#BLLIB = ../blis/lib/cortex-a15/libblis.a
BLLIB = ../blis/install/arm/lib/libblis.a
CBLIB = ../lib/$(PLAT)/libcblas_$(PLAT).a

LN_S = ln -sf

#-----------------------------------------------------------------------------
# Compilers
#-----------------------------------------------------------------------------

CC = arm-linux-gnueabihf-gcc
FC = arm-linux-gnueabihf-gfortran
LOADER = $(FC)

#-----------------------------------------------------------------------------
# Flags for Compilers
#-----------------------------------------------------------------------------

CFLAGS = -O2 -DADD_ -Wall -o $@
FFLAGS = -O2  

#-----------------------------------------------------------------------------
# Archive programs and flags
#-----------------------------------------------------------------------------

ARCH = arm-linux-gnueabihf-ar
ARCHFLAGS = r
RANLIB = echo
